---
export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="container max-w-3xl mx-auto">
      <ul class="flex justify-between items-center gap-3 py-3 px-5">
        <a class="text-2xl font-bold">Qu1etboy's blog</a>
        <div class="gap-3 hidden md:flex">
          <a>About</a>
          <a>Source</a>
        </div>
      </ul>

      <slot />
    </main>
  </body>
</html>
