---
import Navbar from '../components/Navbar.astro'

export interface Props {
  title: string
}

const { title, frontmatter } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="container max-w-3xl mx-auto">
      <Navbar />

      <section class="px-5">
        <header class="mb-10">
          <img
            src={frontmatter.thumbnail}
            alt="thumbnail"
            class="rounded-md mb-5"
          />
          <h1 class="text-4xl font-bold">{frontmatter.title}</h1>
          <div class="flex gap-2 items-center mt-3">
            <div class="rounded-full w-8 h-8 overflow-hidden">
              <img src="/images/non_profile.jpg" alt="profile_image" />
            </div>
            <p>{frontmatter.author}</p>
            <span class="text-sm text-gray-800">{frontmatter.createdAt}</span>
          </div>
        </header>

        <article class="prose max-w-none">
          <slot />
        </article>
      </section>

      <footer class="text-center text-sm text-gray-800 my-12">
        Â© 2022 <a href="https://github.com/qu1etboy">Qu1etboy</a> All rights reserved.
      </footer>
    </main>
  </body>
</html>
