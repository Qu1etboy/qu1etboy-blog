---
import CategoryBadge from './CategoryBadge.astro'

export interface Props {
  title: string
  body: string
  href: string
  thumbnail?: string
  categories: string[]
}

const { href, title, body, thumbnail, categories } = Astro.props
---

<li
  class="rounded-md overflow-hidden shadow-md hover:shadow-xl duration-300 dark:bg-neutral-800"
>
  <a href={href}>
    <img src={thumbnail} alt="thumbnail" class="w-full" />
    <h2 class="p-3 font-semibold text-lg text-gray-800 dark:text-gray-100">
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
    <div class="m-2">
      {categories.map(category => <CategoryBadge category={category} />)}
    </div>
  </a>
</li>
